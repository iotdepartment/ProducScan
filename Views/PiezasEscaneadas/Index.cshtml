@model PaginatedList<RegistrodePiezasEscaneada>


@{
    ViewData["Title"] = "Inspección";
    ViewData["PageTitle"] = "Registro de Inspección";
    ViewData["Subtitle"] = "Registro de Inspección del día laboral actual.";

}

<div class="row align-items-end mb-3">
    <div class="col-md-3">
        <a class="btn btn-success rounded-pill" asp-controller="PiezasEscaneadas" asp-action="ReporteProduccion"><i class="bi bi-table"></i> Reporte Inspección</a>
    </div>

<!-- Datepicker Producción -->
    <div class="col-md-3">
        <label for="fechaProduccion"><strong>Fecha Inspección</strong></label>
        <input type="text" id="fechaProduccion" name="fecha"
               class="form-control datepicker"
               value="@ViewBag.FechaSeleccionada" />
    </div>

    <div class="col-md-3">
        <label for="turnoFiltro"><strong>Filtrar por Turno</strong></label>
        <select id="turnoFiltro" name="turno" class="form-select rounded-pill">
            <option value="" selected="@(ViewBag.TurnoSeleccionado == "" ? "selected" : null)">Todos</option>
            <option value="1" selected="@(ViewBag.TurnoSeleccionado == "1" ? "selected" : null)">Turno 1</option>
            <option value="2" selected="@(ViewBag.TurnoSeleccionado == "2" ? "selected" : null)">Turno 2</option>
            <option value="3" selected="@(ViewBag.TurnoSeleccionado == "3" ? "selected" : null)">Turno 3</option>
        </select>
    </div>

</div>

<table id="tablaProduccion" class="table table-striped table-bordered">

    <thead>
        <tr>
            <th>Fecha</th>
            <th>Hora</th>
            <th>Mandrel</th>
            <th>NPiezas</th>
            <th>Turno</th>
            <th>Mesa</th>
            <th>TM</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Fecha</td>
                <td>@item.Hora</td>
                <td>@item.Mandrel</td>
                <td>@item.Ndpiezas</td>
                <td>@item.Turno</td>
                <td>@item.NuMesa</td>
                <td>@item.Tm</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/locales/bootstrap-datepicker.es.min.js"></script>
    
    <script>
                 $(document).ready(function () {
            $('.datepicker').datepicker({
                format: 'yyyy-mm-dd',
                language: 'es',
                autoclose: true,
                todayHighlight: true
            });

            // 👇 Usar la fecha laboral que viene del backend
            var fechaLaboral = $('#fechaProduccion').val();
            $('#fechaProduccion').datepicker('setDate', fechaLaboral);

            var tablaProduccion = $('#tablaProduccion').DataTable({
                processing: true,
                serverSide: true,
                ajax: {
                    url: '/PiezasEscaneadas/GetProduccion',
                    type: 'POST',
                    data: function (d) {
                        d.fecha = $('#fechaProduccion').val();
                        d.turno = $('#turnoFiltro').val();
                    }
                },
                columns: [
                    { data: 'fecha' },
                    { data: 'hora' },
                    { data: 'mandrel' },
                    { data: 'ndpiezas' },
                    { data: 'turno' },
                    { data: 'nuMesa' },
                    { data: 'tm' }
                ],
                language: { url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json' }
            });

            $('#fechaProduccion').on('changeDate', function () {
                tablaProduccion.ajax.reload();
            });

            $('#turnoFiltro').on('change', function () {
                tablaProduccion.ajax.reload();
            });
        });

    </script>

}


