@model ProducScan.Models.RegistrodePiezasEscaneada

<div class="modal-header">
    <h5 class="modal-title">Editar Registro</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>
<div class="modal-body">
    <form asp-action="Update" asp-controller="PiezasEscaneadas" method="post">
        <input type="hidden" name="Fecha" value="@Model.Fecha.ToString("yyyy-MM-dd")" />
        <input type="hidden" name="Hora" value="@Model.Hora.ToString("HH:mm:ss")" />
        <input type="hidden" name="NuMesa" value="@Model.NuMesa" />
        <input type="hidden" name="Tm" value="@Model.Tm" />

        <div class="mb-3">
            <label>Mandrel</label>
            <input name="Mandrel" class="form-control" value="@Model.Mandrel" />
        </div>
        <div class="mb-3">
            <label>Piezas</label>
            <input name="Ndpiezas" type="number" class="form-control" value="@Model.Ndpiezas" />
        </div>
        <div class="mb-3">
            <label>Turno</label>
            <select name="Turno" class="form-control">
                <option value="1" selected="@(Model.Turno=="1")">1</option>
                <option value="2" selected="@(Model.Turno=="2")">2</option>
                <option value="3" selected="@(Model.Turno=="3")">3</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Guardar</button>
    </form>
</div>