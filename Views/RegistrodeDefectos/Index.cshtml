@model PaginatedList<RegistrodeDefecto>

@{
    ViewData["Title"] = "Defectos";
    ViewData["PageTitle"] = "Registro de defectos";
    ViewData["Subtitle"] = "Defectos detectados en la labor de inspección del día laboral actual.";

}

<div class="row align-items-end mb-3">
    <div class="col-md-3">
        <a class="btn btn-success rounded-pill" asp-controller="PiezasEscaneadas" asp-action="ReporteProduccion"><i class="bi bi-table"></i> Reporte Inspección</a>
    </div>


<!-- Datepicker Defectos -->

    <div class="col-md-3">
        <label for="fechaDefectos"><strong>Fecha Defectos</strong></label>
        <input type="text" id="fechaDefectos" name="fecha"
               class="form-control datepicker"
               value="@ViewBag.FechaSeleccionada" />
    </div>


    <div class="col-md-3">
        <label for="turnoFiltro"><strong>Filtrar por Turno</strong></label>
        <select id="turnoFiltro" name="turno" class="form-select rounded-pill">
            <option value="" selected="@(ViewBag.TurnoSeleccionado == "" ? "selected" : null)">Todos</option>
            <option value="1" selected="@(ViewBag.TurnoSeleccionado == "1" ? "selected" : null)">Turno 1</option>
            <option value="2" selected="@(ViewBag.TurnoSeleccionado == "2" ? "selected" : null)">Turno 2</option>
            <option value="3" selected="@(ViewBag.TurnoSeleccionado == "3" ? "selected" : null)">Turno 3</option>
        </select>
    </div>

</div>

<table id="tablaDefectos" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Hora</th>
            <th>Mandrel</th>
            <th>Código de defecto</th>
            <th>Mesa</th>
            <th>Turno</th>
            <th>TM</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Fecha</td>
                <td>@item.Hora</td>
                <td>@item.Mandrel</td>
                <td>@item.CodigodeDefecto</td>
                <td>@item.NuMesa</td>
                <td>@item.Turno</td>
                <td>@item.Tm</td>
            </tr>
        }
    </tbody>
</table>



@section Scripts{
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/locales/bootstrap-datepicker.es.min.js"></script>

    <script>

                 $(document).ready(function () {
            $('#fechaDefectos').datepicker({
                format: 'yyyy-mm-dd',
                autoclose: true,
                todayHighlight: true,
                language: 'es'
            });

            // 👇 Usar el valor que viene del backend, no la fecha natural
            var fechaLaboral = $('#fechaDefectos').val();
            $('#fechaDefectos').datepicker('setDate', fechaLaboral);

            // DataTable Defectos
            var tablaDefectos = $('#tablaDefectos').DataTable({
                processing: true,
                serverSide: true,
                ajax: {
                    url: '/RegistrodeDefectos/GetDefectos',
                    type: 'POST',
                    data: function (d) {
                        d.fecha = $('#fechaDefectos').val(); // enviar fecha laboral
                        d.turno = $('#turnoFiltro').val();
                    }
                },
                columns: [
                    { data: 'fecha' },
                    { data: 'hora' },
                    { data: 'mandrel' },
                    { data: 'codigodeDefecto' },
                    { data: 'nuMesa' },
                    { data: 'turno' },
                    { data: 'tm' }
                ],
                language: { url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json' }
            });

            $('#fechaDefectos').on('changeDate', function () {
                tablaDefectos.ajax.reload();
            });

            $('#turnoFiltro').on('change', function () {
                tablaDefectos.ajax.reload();
            });
        });
    </script>
}
