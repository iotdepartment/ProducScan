@model ProducScan.Models.RegistrodeDefecto


    <div class="modal fade" id="createDefectoModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Create" asp-controller="RegistrodeDefectos" method="post" id="formDefecto">
                @Html.AntiForgeryToken()
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="createDefectoModalLabel">Registrar Defecto</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <!-- Fecha -->
                    <div class="mb-3">
                        <label>Fecha</label>
                        <input asp-for="Fecha" type="date" class="form-control"
                               max="@DateTime.Now.ToString("yyyy-MM-dd")" required/>

                    </div>
                    <!-- Hora -->
                    <div class="mb-3">
                        <label>Hora</label>
                        <input type="time" class="form-control" name="Hora" value="@Model.Hora.ToString("HH:mm")" required />
                    </div>
                    <!-- Mesa -->
                    <div class="mb-3">
                        <label>Mesa</label>
                        <select name="NuMesa" class="form-control" required>
                            <option value="">Seleccione una mesa</option>
                            @foreach (var m in (IEnumerable<string>)ViewBag.Mesas)
                            {
                                <option value="@m">@m</option>
                            }
                        </select>
                    </div>
                    <!-- TM -->
                    <div class="mb-3">
                        <label>Team Member</label>
                        <input type="text" class="form-control tm-input" name="Tm" placeholder="Buscar TM..." required />
                    </div>

                    <!-- Mandrel -->
                    <div class="mb-3">
                        <label>Mandril</label>
                        <input type="text" class="form-control mandrel-input" name="Mandrel" placeholder="Buscar Mandrel..." required />
                    </div>

                    <!-- Defecto -->
                    <div class="mb-3">
                        <label  class="form-label">Defecto</label>
                        <select asp-for="CodigodeDefecto" id="ddlDefecto" class="form-select">
                            <option value="">-- Selecciona un defecto --</option>
                        </select>
                    </div>

                    <!-- Turno -->
                    <div class="mb-3">
                        <label>Turno</label>
                        <select name="Turno" class="form-control" required>
                            @foreach (var t in (IEnumerable<string>)ViewBag.Turnos)
                            {
                                <option value="@t">@t</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btnNuevoDefecto" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>