@model IEnumerable<ProducScan.Models.Usuario>


<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th class="text-center">Usuario</th>
            <th class="text-center">Rol</th>
            <th class="text-center">Fecha de creación</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td class="text-center">@u.NombreUsuario</td>
                <td class="text-center">
                    @switch (u.Rol)
                    {
                        case "Admin":
                            <span class="badge bg-danger rounded-pill">Admin</span>
                            break;

                        case "Gerente":
                            <span class="badge bg-primary rounded-pill">Gerente</span>
                            break;

                        case "Editor":
                            <span class="badge bg-warning rounded-pill">Editor</span>
                            break;

                        case "Visual":
                            <span class="badge bg-success rounded-pill">Visual</span>
                            break;

                        default:
                            <span class="badge bg-secondary rounded-pill">@u.Rol</span>
                            break;
                    }
                </td>
                <td class="text-center">@u.FechaAlta.ToString("dd/MM/yyyy HH:mm")</td>
                <td class="text-center">
                    <button class="btn btn-sm btn-warning btnEditar rounded-circle" data-id="@u.Id">
                        <i class="bi bi-pencil"></i>
                    </button>
                    <button class="btn btn-sm btn-danger btnEliminar rounded-circle" data-id="@u.Id">
                        <i class="bi bi-trash"></i>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>