@model IEnumerable<ProducScan.Models.Usuario>


<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Usuario</th>
            <th>Rol</th>
            <th>Fecha de creación</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.NombreUsuario</td>
                <td>@u.Rol</td>
                <td>@u.FechaAlta.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <button class="btn btn-sm btn-warning btnEditar rounded-circle" data-id="@u.Id">
                        <i class="bi bi-pencil"></i>
                    </button>
                    <button class="btn btn-sm btn-danger btnEliminar rounded-circle" data-id="@u.Id">
                        <i class="bi bi-trash"></i>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>