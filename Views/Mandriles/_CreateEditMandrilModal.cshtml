@model ProducScan.Models.Mandril

<!-- Modal Create/Edit -->
<div class="modal fade" id="createEditModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <!-- modal-lg para que se vea más amplio -->
        <div class="modal-content">
            <form id="createEditForm" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle">Crear Mandril</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" id="mandrilId" name="Id" />

                    <div class="mb-3">
                        <label class="form-label">Mandril</label>
                        <input type="text" class="form-control" id="mandrilNombre" name="MandrilNombre" required />
                        <div class="invalid-feedback">El campo Mandril es obligatorio.</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Centro de Costos</label>
                        <input type="text" class="form-control" id="centrodeCostos" name="CentrodeCostos"
                               required pattern="^[0-9]+$" />
                        <div class="invalid-feedback">El centro de costos debe contener solo números.</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Cantidad de Empaque</label>
                        <input type="text" class="form-control" id="cantidaddeEmpaque" name="CantidaddeEmpaque"
                               required pattern="^[0-9]+$" />
                        <div class="invalid-feedback">La cantidad de empaque debe contener solo números.</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Barcode</label>
                        <input type="text" class="form-control" id="barcode" name="Barcode" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Familia</label>
                        <select class="form-select" id="familia" name="Familia">
                            <option value="">Seleccione una familia</option>
                            <option>33x39.4</option>
                            <option>33x42</option>
                            <option>7x12</option>
                            <option>7.5X14.5</option>
                            <option>37X44</option>
                            <option>37X47</option>
                            <option>11x18</option>
                            <option>13x20</option>
                            <option>13X21</option>
                            <option>24x30</option>
                            <option>16x24</option>
                            <option>7X14</option>
                            <option>11X17</option>
                            <option>9.7X17.6 (AEM)</option>
                            <option>9.7X17.6 (ACM)</option>
                            <option>9.3X17.2</option>
                            <option>8.9X17.2</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Proceso</label>
                        <select class="form-select" id="proceso" name="Proceso">
                            <option value="">Seleccione un proceso</option>
                            <option>Coex</option>
                            <option>CHS</option>
                            <option>ACM</option>
                            <option>AEM</option>
                        </select>
                    </div>
                  
                    <div class="mb-3">
                        <label class="form-label">Kanban</label>
                        <input type="text" class="form-control" id="kanban" name="Kanban" />
                    </div>

                    <div class="mb-3">
                        <label for="estacion" class="form-label">Estación</label>
                        <input type="text" class="form-control" id="estacion" name="Estacion" />
                    </div>

                </div>

               
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" id="saveBtn">Guardar</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>