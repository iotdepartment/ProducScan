@{
    var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
    var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
    bool isLoginPage = currentController == "Auth" && currentAction == "Login";

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inspeccion</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProducScan.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">

    <style>


        
        #sidebarMenu {
            width: 240px;
            min-height: 100vh;
            transition: width 0.3s;
        }

        #sidebarMenu.collapsed {
            width: 70px;
        }

        #mainContent {
            margin-left: 240px;
            transition: margin-left 0.3s;
        }

        #sidebarMenu.collapsed ~ #mainContent {
            margin-left: 70px;
        }
    
        #sidebarMenu.collapsed .nav-link {
            justify-content: center;
        }

        /* Oculta texto cuando sidebar está colapsado */
        #sidebarMenu.collapsed .sidebar-text {
            display: none !important;
        }

        /* Muestra flecha debajo del ícono en colapsado */
        #sidebarMenu.collapsed .collapsed-arrow {
            display: block !important;
        }

        /* Oculta flecha junto al texto en colapsado */
        #sidebarMenu.collapsed .normal-arrow {
            display: none !important;
        }

        /* Animación de rotación */
        .transition-arrow {
            transition: transform 0.3s ease;
        }

        .nav-link[aria-expanded="true"] .transition-arrow {
            transform: rotate(180deg);
        }


    </style>


</head>
<body class="bg-body-secondary mb-0">
    @if (!isLoginPage)
    {
        <div class="d-flex">
            <!-- Sidebar fijo solo en escritorio -->
            <nav id="sidebarMenu" class="d-none d-md-flex flex-column bg-light border-end vh-100 position-fixed">
                <!-- Botón hamburguesa dentro del sidebar (escritorio) -->
            <button id="toggleSidebar" class="btn mb-3 ">
                <i class="bi bi-list"></i>
            </button>

            <!-- Marca con dos logos (escritorio) -->
            <a class="navbar-brand mb-3 p-2 d-flex justify-content-center align-items-center" asp-controller="PiezasEscaneadas" asp-action="Dashboard">
                <img src="~/images/toyoda-gosei-logo.png" alt="Logo Completo" class="logo-completo img-fluid" style="max-height:60px;" />
                <img src="~/images/icono-tg.png" alt="Logo Icono" class="logo-icono img-fluid d-none" style="max-height:40px;" />
            </a>

            <hr />




                <ul class="navbar-nav">

                    <!-- Dashboard -->
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center w-100 @(currentController == "PiezasEscaneadas" && currentAction == "Dashboard" ? "active fw-bold bg-primary text-white" : "text-dark")"
                           asp-controller="PiezasEscaneadas" asp-action="Dashboard">
                            <span class="d-flex justify-content-center" style="width:40px;">
                            <i class="bi bi-house"></i>
                            </span>
                            <span class="ms-2 sidebar-text">Dashboard</span>
                        </a>
                    </li>


                    <!-- Producción expandible -->
                    <li class="nav-item">
                        @{
                            bool produccionOpen =
                            (currentController == "PiezasEscaneadas" && (currentAction == "Index" || currentAction == "ReporteProduccion" || currentAction == "DetalleProduccionMesa" || currentAction == "DetallePorUsuario"))
                            || (currentController == "RegistrodeDefectos" && (currentAction == "Index" || currentAction == "DetalleDefectosPorUsuarios"))
                            || (currentController == "RegistrodeUsers" && (currentAction == "Index"));
                        }
                            <a class="nav-link d-flex align-items-center w-100 @(produccionOpen ? "active fw-bold bg-primary text-white" : "text-dark")"
                                data-bs-toggle="collapse" href="#produccionSubmenu" role="button"
                                aria-expanded="@(produccionOpen.ToString().ToLower())" aria-controls="produccionSubmenu">

                                <!-- Ícono de Producción -->
                                <span class="d-flex flex-column align-items-center" style="width:40px;">
                                    <i class="bi bi-gear"></i>
                                    <i class="bi bi-chevron-down transition-arrow collapsed-arrow d-none"></i>
                                </span>

                                <!-- Texto + flecha pegada al texto -->
                                <span class="ms-2 sidebar-text d-flex align-items-center">
                                    Producción
                                    <i class="bi bi-chevron-down transition-arrow ms-1 normal-arrow"></i>
                                </span>
                            </a>


                    <div class="collapse @(produccionOpen ? "show" : "")" id="produccionSubmenu">
                        <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center w-100 @(currentController == "PiezasEscaneadas" && currentAction == "Index" ? "active fw-bold bg-secondary text-white" : "text-dark")"
                                    asp-controller="PiezasEscaneadas" asp-action="Index">
                                    <span class="d-flex justify-content-center" style="width:40px;">
                                        <i class="bi bi-list-ul"></i>
                                    </span>
                                    <span class="ms-2 sidebar-text">Listado de producción</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center w-100 @(currentController == "RegistrodeDefectos" && currentAction == "Index" ? "active fw-bold bg-secondary text-white" : "text-dark")"
                                    asp-controller="RegistrodeDefectos" asp-action="Index">
                                    <span class="d-flex justify-content-center" style="width:40px;">
                                        <i class="bi bi-exclamation-triangle"></i>
                                    </span>
                                    <span class="ms-2 sidebar-text">Listado de defectos</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center w-100 @(
                                    (currentController == "PiezasEscaneadas" && (currentAction == "ReporteProduccion" || currentAction == "DetalleProduccionMesa" || currentAction == "DetallePorUsuario"))
                                    || (currentController == "RegistrodeDefectos" && currentAction == "DetalleDefectosPorUsuarios")
                                    ? "active fw-bold bg-secondary text-white" : "text-dark")"
                                    asp-controller="PiezasEscaneadas" asp-action="ReporteProduccion">
                                    <span class="d-flex justify-content-center" style="width:40px;">
                                        <i class="bi bi-card-text"></i>
                                    </span>
                                    <span class="ms-2 sidebar-text">Reporte de producción</span>
                                </a>
                            </li>
                            @if (User.IsInRole("Admin") || User.IsInRole("Editor"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link d-flex align-items-center w-100 @(currentController == "RegistrodeUsers" && currentAction == "Index" ? "active fw-bold bg-secondary text-white" : "text-dark")"
                                        asp-controller="RegistrodeUsers" asp-action="Index">
                                            <span class="d-flex justify-content-center" style="width:40px;">
                                                <i class="bi bi-person-vcard"></i>
                                            </span>
                                            <span class="ms-2 sidebar-text">Team Members</span>
                                        </a>
                                    </li>
                                }
                            </ul>
                    </div>
                </li>

                @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center w-100 @(currentController == "Usuarios" ? "active fw-bold bg-primary text-white" : "fw-bold")"
                               asp-controller="Usuarios" asp-action="Index">
                                <span class="d-flex justify-content-center" style="width:40px;">
                                <i class="bi bi-people"></i>
                                </span>
                                <span class="ms-2 sidebar-text">Usuarios</span>
                            </a>
                        </li>
                    }
                </ul>



                <hr />
                <div class="mt-auto">
                    <ul class="nav flex-column">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-link nav-link text-start p-3 fw-bold d-flex align-items-center">
                                        <span class="d-flex justify-content-center" style="width:40px;">
                                        <i class="bi bi-box-arrow-right"></i>
                                        </span>
                                        <span class="ms-2 sidebar-text">Cerrar sesión (@User.Identity.Name)</span>
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center" asp-controller="Auth" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i><span class="ms-2 sidebar-text">Iniciar sesión</span>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </nav>

            <!-- Navbar fijo arriba solo en móviles -->
            <nav class="navbar bg-light fixed-top d-md-none">
                <div class="container-fluid">
                    <a class="navbar-brand d-flex align-items-center" asp-controller="PiezasEscaneadas" asp-action="Dashboard">
                        <img src="~/images/icono-tg.png" alt="Logo móvil" class="img-fluid" style="max-height:36px;" />
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mobileMenu" aria-controls="mobileMenu" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>

                <div class="collapse" id="mobileMenu">
                    <ul class="navbar-nav p-2">
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center @(currentController == "PiezasEscaneadas" && currentAction == "Dashboard" ? "active fw-bold" : "")"
                               asp-controller="PiezasEscaneadas" asp-action="Dashboard">
                                <i class="bi bi-house me-2"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center @(currentController == "PiezasEscaneadas" && currentAction == "Index" ? "active fw-bold" : "")"
                               asp-controller="PiezasEscaneadas" asp-action="Index">
                                <i class="bi bi-gear me-2"></i> Producción
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center @(currentController == "RegistrodeDefectos" ? "active fw-bold" : "")"
                               asp-controller="RegistrodeDefectos" asp-action="Index">
                                <i class="bi bi-exclamation-triangle me-2"></i> Defectos
                            </a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center @(currentController == "Usuarios" ? "active fw-bold" : "")"
                                   asp-controller="Usuarios" asp-action="Index">
                                    <i class="bi bi-people me-2"></i> Usuarios
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            @if (User.Identity?.IsAuthenticated ?? false)
                            {
                                <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline nav-link p-0">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-link nav-link d-flex align-items-center">
                                        <i class="bi bi-box-arrow-right me-2"></i> Cerrar sesión (@User.Identity.Name)
                                    </button>
                                </form>
                            }
                            else
                            {
                                <a class="nav-link d-flex align-items-center" asp-controller="Auth" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-2"></i> Iniciar sesión
                                </a>
                            }
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Contenido principal -->
            <div id="mainContent" class="flex-grow-1 p-4">
                <div class="container bg-body rounded-4 shadow-lg mb-3">
                    <main role="main" class="p-5">
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>
    }
    else
    {
        <main role="main">@RenderBody()</main>
    }


    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const toggleBtn = document.getElementById("toggleSidebar");
            const sidebar = document.getElementById("sidebarMenu");

            if (toggleBtn && sidebar) {
                toggleBtn.addEventListener("click", function () {
                    sidebar.classList.toggle("collapsed");
                });
            }
        });

        $(document).ready(function () {
            $('#busqueda').on('keyup', function () {
                var value = $(this).val().toLowerCase();
                $('.cardProduccion').filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
</body>
</html>